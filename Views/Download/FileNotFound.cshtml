@{
    ViewData["Title"] = "Không tìm thấy tập tin";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">

            <div class="mb-4">
                <i class="bi bi-file-earmark-x text-danger" style="font-size: 8rem;"></i>
            </div>

            <h2 class="fw-bold text-danger">Rất tiếc, tập tin không tồn tại!</h2>

            <p class="text-muted lead mt-3">
                Liên kết bạn truy cập có thể không chính xác, liên kết đã hết hạn,
                hoặc tập tin gốc đã bị người sở hữu xóa khỏi hệ thống.
            </p>

            <div class="mt-4">
                <a href="/" class="btn btn-primary btn-lg rounded-pill px-5">
                    <i class="bi bi-house-door-fill"></i> Về Trang chủ
                </a>
            </div>

            <div class="mt-3">
                <a href="javascript:history.back()" class="text-decoration-none text-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại trang trước
                </a>
            </div>

        </div>
    </div>
</div>