@model IEnumerable<FileShareApp.Models.SharedFile>
@{
    ViewData["Title"] = "Tập tin của tôi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>🗂 Tập tin của tôi</h2>
        <a asp-action="Upload" class="btn btn-success">+ Tải file lên</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <table class="table table-hover table-bordered">
        <thead class="table-light">
            <tr>
                <th>Tên file</th>
                <th>Kích thước</th>
                <th>Ngày tải lên</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (SharedFile item in Model)
            {
                <tr>
                    <td>
                        <strong>@item.OriginalName</strong>
                    </td>
                    <td>
                        @{
                            double sizeInMb = item.FileSize / 1024.0 / 1024.0;
                            string sizeDisplay = sizeInMb < 1
                            ? Math.Round(item.FileSize / 1024.0, 1) + " KB"
                            : Math.Round(sizeInMb, 2) + " MB";
                        }
                        @sizeDisplay
                    </td>
                    <td>@item.UploadDate?.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@item.FileId" method="post"
                              onsubmit="return confirm('Bạn có chắc muốn xóa file này không?');" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                        </form>

                        <button class="btn btn-sm btn-info text-white" onclick="copyLink('@item.ShareToken')">
                            <i class="bi bi-link-45deg"></i> Lấy Link
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div class="text-center mt-5 text-muted">
            <p>Bạn chưa tải lên tập tin nào.</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        function copyLink(token) {
            var domain = window.location.origin;
            var fullLink = domain + "/d/" + token;

            navigator.clipboard.writeText(fullLink).then(function() {
                alert("Đã copy liên kết vào bộ nhớ tạm:\n" + fullLink);
            }, function(err) {
                console.error('Lỗi copy: ', err);
                prompt("Hãy copy thủ công link dưới đây:", fullLink);
            });
        }
    </script>
}